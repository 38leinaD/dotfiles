// Place your key bindings in this file to overwrite the defaults
[
    {
        "key": "ctrl+shift+up",
        "command": "workbench.action.focusActiveEditorGroup"
    },
    {
        "key": "ctrl+shift+down",
        "command": "workbench.action.terminal.focus"
    },
    // https://stackoverflow.com/questions/48511956/toggle-between-fullscreen-editor-and-terminal-in-vs-code
    {
        "key": "ctrl+shift+q",
        "command": "workbench.action.toggleMaximizedPanel"
    },
    {
        "key": "ctrl+shift+t",
        "command": "workbench.action.closePanel",
        // "when": "terminalFocus"
    },
    {
        "key": "ctrl+shift+t",
        "command": "workbench.action.toggleMaximizedPanel",
        "when": "!terminalFocus"
    },
    // Bash "go to beginning of line" instead of VSCode Quick Open
    // https://github.com/microsoft/vscode/issues/27342
    {
        "key": "ctrl+e",
        "command": "-workbench.action.quickOpen"
    }
]
